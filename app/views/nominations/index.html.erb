<p id="notice"><%= notice %></p>

<h1>Listing Nominations</h1>

<table>
  <thead>
    <tr>
      <th>Institution</th>
      <th>Name</th>
      <th>Reason</th>
      <th>Verified</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @nominations.each do |nomination| %>
      <% if can? :read, nomination %>
        <tr>
          <td><%= nomination.institution.abbreviation %></td>
          <td><%= nomination.name %></td>
          <td><%= truncate nomination.reason %></td>
          <td><%= nomination.verified ? "✔" : "–" %></td>
          <td><%= link_to 'Show', nomination %></td>
          <td><%= link_to 'Edit', edit_nomination_path(nomination) %></td>
          <td><%= link_to 'Destroy', nomination, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

