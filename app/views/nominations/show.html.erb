<p id="notice"><%= notice %></p>

<p>
  <strong>Institution:</strong>
  <%= @nomination.institution.name %>
</p>

<p>
  <strong>Name:</strong>
  <%= @nomination.name %>
</p>

<p>
  <strong>Reason:</strong>
  <%= simple_format @nomination.reason %>
</p>

<p>
  <strong>Nominator:</strong>
  <%= @nomination.nominator %>
</p>

<% if can? :update, @nomination %>
  <p>
    <strong>Nominator email:</strong>
    <%= @nomination.nominator_email %>
  </p>

  <p>
    <strong>Verified:</strong>
    <%= @nomination.verified %>
  </p>

  <p>
    <strong>Votes:</strong>
    <%= @nomination.votes %>
  </p>

  <%= link_to 'Edit', edit_nomination_path(@nomination) %>
<% end %>
<% if can? :destroy, @nomination %>
  <%= link_to 'Delete', @nomination, method: :delete, data: { confirm: 'Er du sikker?' } %>
<% end %>
<%= link_to 'Back', nominations_path %>
